<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FF6600"
    >
    <item

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="173dp"
        android:text="Taxa de ServiÃ§o (10%) R$:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/edt_consumo"
        android:text="Consumo Total R$:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_consumo"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/edt_dividir"
        android:layout_marginBottom="-44dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="Couvert artistico R$:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:text="Dividir conta por:" />

    <EditText
        android:id="@+id/edt_dividir"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="83dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/edt_couvert_artistico"
        android:layout_width="97dp"
        android:layout_height="31dp"
        android:layout_alignStart="@+id/edt_dividir"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="-5dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/bt_calcular"
        android:layout_width="307dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:text="Calcular conta final"
        android:background="#66000000"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="214dp"
        android:text="Custo Total R$:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/restaurante"
        android:layout_alignParentStart="true"
        android:text="Vale por pessooa R$:" />

    <EditText
        android:id="@+id/edt_conta_total"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/edt_servico"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/edt_servico"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="92dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/edt_valor_pessoa"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/edt_conta_total"
        android:ems="10"
        android:inputType="number" />

    <ImageView
        android:id="@+id/restaurante"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="87dp"
        android:src="@drawable/restaurante"
        />

</RelativeLayout>